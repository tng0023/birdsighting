<body>
<div class="container">
  <div class="jumbotron">
<h1>Home Maintenance Task List</h1>
</div>
</div>


<div class="addNewJob">
  <h1>Fill out the fields below to add a task!</h1>
    <div class="messages">
      {{#each messages.error}}
        <p class= 'error_msg'>{{this}}</p>
      {{/each}}
    </div>
<div class="form">
    <form action="/" method="POST">
      Date & Time of Service: <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> <input name="dateSet" type="datetime-local" required> (Click down-arrow to select date)
      <br><br>
      Type of Job: <input name="type" type="text" required>
      <br><br>
      Company: <input name="company" type="text" required>
      <br><br>
      Contact Name: <input name="contact" type="text"required>
      <br><br>
      Phone: <input name="phone" type="number" maxlength="10" required>
      <br><br>
      Notes: <input name="notes" type="textarea">
      <br><br>
      <input id="add" name="addJob" type="submit" value="Add new job">
      <br>
    </form>

</div>

<div class="reminderSet">
  <hr>
  <h2><b><u>All Tasks</u></b></h2>
  <br>
  {{#each types}}
    <table>
    <tr>
    <th>Date of Service</th>
    <th>Type</th>
    <th>Company</th>
    <th>Contact Name</th>
    <th>Phone</th>
    <th>Notes</th>
    <th>Delete?</th>
    <th>Send Email?</th>
    </tr>
    <tr>
      <td>{{dateFormatter this.dateSet}}</td>
      <td>{{this.type}}</td>
      <td>{{this.company}}</td>
      <td>{{this.contact}}</td>
      <td>{{this.phone}}</td>
      <td>{{this.notes}}</td>
      <td><form action="delete" method="POST">
          <input type="hidden" name="_id" value="{{this._id}}">
          <input onclick="deleteFunction()" id="delete_button" type="submit" name="delete" value="Delete Appointment"></td>
      <td id="email"><a href="mailto:test@gmail.com" target="_top">Send Mail</a></td>
    </tr>
    </table>
    <hr>
  {{else}}
  <p>No appointments have been created!</p>
  {{/each}}
</form>
</table>
